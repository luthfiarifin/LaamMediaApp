<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_message_received_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_post_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_message_received_profile"
        app:layout_constraintTop_toTopOf="@+id/item_message_received_profile">

        <TextView
            android:id="@+id/item_message_received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_message_received"
            android:elevation="2dp"
            android:text="Message"
            android:textColor="@color/textBlack"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="78dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>